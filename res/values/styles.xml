<resources>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar"></style>

    <style name="UpdateCheckerListImage">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="UpdateCheckerListText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#f3f3f3</item>
    </style>

    <style name="UpdateCheckerListTitleText" parent="UpdateCheckerListText">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="UpdateCheckerListRow">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="UpdateCheckerListLine">
        <item name="android:background">#1b1c1e</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="UpdateCheckerList" parent="android:Theme">
        <item name="android:background">@drawable/main_bg_gradient</item>
    </style>

</resources>